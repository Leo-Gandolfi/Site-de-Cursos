<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - OnlineCourses</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/site.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</head>
<header class="flex justify-between items-center p-4  shadow-md">
    <h1 class="text-xl font-bold">Cursos Online</h1>
    <div class="flex items-center space-x-4">
        <div style="color: black;" class="flex justify-between items-center mb-6">
            <input type="text" placeholder="Pesquisar cursos..." class="w-full max-w-sm px-4 py-2 border rounded focus:outline-none focus:ring focus:ring-blue-300">
            <button id="themeToggle" class="ml-4">
                <span class="material-icons">brightness_4</span>
            </button>
                    <button class="material-icons">notifications</button>
       <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                <span class="material-icons">account_circle</span>
            </button>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
                <li><a class="dropdown-item" href="#">Perfil</a></li>
                <li><a class="dropdown-item" href="#">Configurações</a></li>
                <li><a class="dropdown-item" href="#">Logout</a></li>
            </ul>
        </div>
        </div>


    </div>
      
</header>
<body class="shadow-md">
    <div style="height:100%" class="flex h-screen">
        <!-- Menu Lateral -->
        <aside id="sidebar"  class="w-80 flex-shrink-0 transform transition-transform duration-200 ease-in-out">
            <div class="p-4">
                <nav class="space-y-4">
                    <a href="#" class="flex items-center space-x-3 hover:bg-gray-300 dark:hover:bg-gray-700 px-3 py-2 rounded">
                        <span class="material-icons">dashboard</span>
                        <span>Dashboard</span>
                    </a>
                    <a href="#" class="flex items-center space-x-4 hover:bg-gray-300 dark:hover:bg-gray-700 px-3 py-2 rounded">
                        <span class="material-icons">book</span>
                        <span>Meus Cursos</span>
                    </a>
                    <a href="#" class="flex items-center space-x-3 hover:bg-gray-300 dark:hover:bg-gray-700 px-3 py-2 rounded">
                        <span class="material-icons">school</span>
                        <span>Certificados</span>
                    </a>
                    <a href="#" class="flex items-center space-x-3 hover:bg-gray-300 dark:hover:bg-gray-700 px-3 py-2 rounded">
                        <span class="material-icons">settings</span>
                        <span>Configurações</span>
                    </a>
                </nav>
            </div>
        </aside>

        <main class="flex-grow p-6 ">
            <div style="height:100%;">
                @RenderBody()
            </div>
        </main>
    </div>
</body>
</html>