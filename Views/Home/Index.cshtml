<div class="container mx-auto px-4">
    <h2 class="text-2xl font-bold mb-4">Cursos em Progresso</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        @foreach (var course in Model.CoursesInProgress)
        {
            <div class="border rounded-lg shadow-md p-4 courseSelection">
                <img src="@course.ThumbnailUrl" alt="@course.Title" class="w-full h-32 object-cover rounded-md mb-2" />
                <h3 class="text-lg font-semibold">@course.Title</h3>
                <p>@course.Description</p>
                <div class="relative w-full h-4 bg-gray-200 rounded-full mb-4">
                    <div class="absolute top-0 left-0 h-full bg-blue-500 rounded-full" style="width: @course.Progress%;"></div>
                </div>
                <div class="mt-2">
                    <span>Progresso: @course.Progress%</span>
                </div>
                <button class="mt-4 bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600 transition">
                    Continuar
                </button>
            </div>
        }
    </div>

    <h2 class="text-2xl font-bold mt-8 mb-4">Cursos Recomendados</h2>
    <div  class="flex overflow-x-auto space-x-4 p-4">
        @foreach (var course in Model.RecommendedCourses)
        {
            <div class="flex-none w-64 border rounded-lg shadow-md p-4 relative">
                <img src="@course.ThumbnailUrl" alt="@course.Title" class="w-full h-32 object-cover rounded-md mb-2" />
                <h3 class="text-lg font-semibold">@course.Title</h3>
                <p>@course.Description</p>
                <button class="absolute bottom-4 left-4 bg-green-500 text-white py-2 px-4 rounded hover:bg-green-600 transition">
                    Saiba mais
                </button>
            </div>
        }
    </div>


</div>
